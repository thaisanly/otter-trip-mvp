# Application Configuration
# Copy this file to .env.local and update with your values
NEXT_PUBLIC_APP_NAME="Otter Trip"

# Email configuration
# Choose email provider: 'resend' or 'smtp'
EMAIL_PROVIDER=smtp
ADMIN_EMAIL=contact@ottertrip.com

# Resend configuration (when EMAIL_PROVIDER=resend)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxx

# SMTP configuration (when EMAIL_PROVIDER=smtp)
# For local development with Mailpit: host.docker.internal:1025
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@ottertrip.com